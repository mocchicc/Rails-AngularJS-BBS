
<div ng-controller="PostsCtrl">


<form class="form-inline" ng-submit="create()">
  <div class="form-group">
    <label for="exampleInputName2">名前</label>
    <input type="text" class="form-control" id="exampleInputName2" placeholder="のび太" ng-model="newPost.author" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">本文</label>
    <input type="text" class="form-control" id="exampleInputEmail2" placeholder="こんにちは" ng-model="newPost.body" required>
  </div>
  <button type="submit" class="btn btn-default">投稿</button>
</form>



  <div class="post" ng-repeat="post in posts">
    <span>{{$index}}.</span>
    <span class="author">{{post.author}}</span>
    <span class="time">{{post.created_at | date: 'MM-dd HH:mm:ss'}}</span>
    <div class="body">{{post.body}}</div>
  </div>



</div>